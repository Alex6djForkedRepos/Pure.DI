<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net7.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <NoWarn>DIW0000</NoWarn>
        <IsPackable>false</IsPackable>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)Generated</CompilerGeneratedFilesOutputPath>
        <PureDISeverity>Hidden</PureDISeverity>
        <PureDILogFile>.logs\WpfAppNetCore.log</PureDILogFile>
    </PropertyGroup>

    <ItemGroup>
        <CompilerVisibleProperty Include="PureDISeverity" />
        <CompilerVisibleProperty Include="PureDILogFile" />
        <ProjectReference Include="..\..\src\Pure.DI.Core\Pure.DI.Core.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\..\src\Pure.DI\Pure.DI.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\Clock\Clock.csproj" />
    </ItemGroup>

</Project>